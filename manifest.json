{
  "manifest_version": 3,
  "name": "스크린샷 매니저",
  "version": "1.0",
  "description": "스크린샷을 캡처하고 관리하며 클립보드에 복사합니다.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "unlimitedStorage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
